<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import com.jfoenix.controls.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.layout.*?>

<AnchorPane fx:id="rootPane" prefHeight="297.0" prefWidth="351.0" stylesheets="@../../theme.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ui.add.addFoodInfo.AddFoodInfo">
   <children>
      <VBox layoutY="2.0" prefHeight="240.0" prefWidth="350.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>

            <JFXTextField fx:id="foodName" labelFloat="true" promptText="名称">
               <VBox.margin>
                  <Insets bottom="30.0" left="30.0" right="30.0" top="10.0" />
               </VBox.margin>
            </JFXTextField>

            <JFXTextField fx:id="foodPrice" labelFloat="true" promptText="价格">
               <VBox.margin>
                  <Insets bottom="30.0" left="30.0" right="30.0" top="10.0" />
               </VBox.margin>
            </JFXTextField>

            <JFXTextField fx:id="num" labelFloat="true" promptText="数量">
               <VBox.margin>
                  <Insets bottom="30.0" left="30.0" right="30.0" top="10.0" />
               </VBox.margin>
            </JFXTextField>
            <JFXComboBox fx:id="foodUnidtJFXComboBox" onAction="#foodUnitSelected" labelFloat="true" prefHeight="27.0" prefWidth="304.0" promptText="规格">
               <VBox.margin>
                  <Insets left="30.0" right="30.0" top="50.0" />
               </VBox.margin>
            </JFXComboBox>

            <JFXComboBox fx:id="foodTypeNameJFXComboBox" labelFloat="true" prefHeight="27.0" prefWidth="304.0" promptText="食材类型">
               <VBox.margin>
                  <Insets bottom="20.0" left="30.0" right="30.0" top="40.0" />
               </VBox.margin>
            </JFXComboBox>

            <JFXTextField fx:id="foodDes" labelFloat="true" promptText="描述">
               <VBox.margin>
                  <Insets bottom="30.0" left="30.0" right="30.0" top="10.0" />
               </VBox.margin>
            </JFXTextField>
            <HBox prefHeight="55.0" prefWidth="340.0">
               <children>
                  <JFXButton fx:id="btnOk" onAction="#foodInfoAdd" prefHeight="58.0" prefWidth="162.0" style="-fx-background-color: #2196F3;" text="添加" textFill="WHITE">
                     <HBox.margin>
                        <Insets bottom="5.0" right="5.0" />
                     </HBox.margin>
                     <padding>
                        <Insets right="5.0" />
                     </padding>
                  </JFXButton>
                  <JFXButton onAction="#cancel" prefHeight="37.0" prefWidth="162.0" style="-fx-background-color: #2196F3;" text="取消" textFill="WHITE">
                     <HBox.margin>
                        <Insets bottom="5.0" right="5.0" />
                     </HBox.margin>
                     <padding>
                        <Insets left="5.0" />
                     </padding>
                  </JFXButton>
               </children>
               <padding>
                  <Insets bottom="5.0" left="8.0" right="5.0" top="8.0" />
               </padding>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
